<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%style{%d{HH:mm:ss.SSS}}{White} %style{[%t]}{Yellow} %highlight{%-5level}{ERROR=red, WARN=yellow, INFO=green}: %style{%msg%n}{blue}</Pattern>
                <DisableAnsi>false</DisableAnsi>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>